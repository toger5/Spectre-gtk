{
    "app-id": "com.github.spectre",
    "runtime": "org.gnome.Platform",
    "runtime-version": "40",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "spectre-gtk",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=session-bus",
        "--device=dri"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "build-args": [
            "--share=network"
        ],
        "env": {
            "CARGO_HOME": "/run/build/spectre-gtk/cargo",
            "RUSTFLAGS": "--remap-path-prefix =../",
            "RUST_BACKTRACE": "1"
        }
    },
    "modules": [
        {
            "name": "libsodium",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.libsodium.org/libsodium/releases/libsodium-1.0.18.tar.gz",
                    "sha256":"6f504490b342a4f8a4c4a02fc9b866cbef8622d5df4e5452b46be121e46636c1"
                }
            ]
        },
        {
            "name": "spectre-gtk",
            "buildsystem": "simple",
            "build-commands": [
                "cargo install --path .",
                "install -Dm755 /run/build/spectre-gtk/cargo/bin/spectre-gtk -t /app/bin/",
                "install -Dm644 ./data/${FLATPAK_ID}.metainfo.xml -t /app/share/metainfo/",
                "install -Dm644 ./data/${FLATPAK_ID}.desktop -t /app/share/applications/",
                "install -Dm644 ./data/${FLATPAK_ID}.svg -t /app/share/icons/hicolor/scalable/apps/"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "../"
                }
            ]
        }
    ]
}