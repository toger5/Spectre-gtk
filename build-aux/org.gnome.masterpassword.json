{
    "app-id": "org.gnome.masterpassword",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.38",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "rust-mpw",
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "build-args": [
            "--share=network"
        ],
        "env": {
            "CARGO_HOME": "/run/build/rustmpw/cargo",
            "RUSTFLAGS": "--error-format=short --remap-path-prefix =../",
            "RUST_BACKTRACE": "1"
        }
    },
    "modules": [
        {
            "name": "libmpw",
            "buildsystem": "simple",
            "build-commands": [
                "install -D libmpw.so /app/lib/libmpw.so"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "gui_app/src/masterpassword-c/core/lib/linux/x86_64/libmpw.so"
                }
            ]
        },
        {
            "name": "rustmpw",
            "buildsystem": "simple",
            "build-commands": [
                "cargo install --path ."
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "gui_app"
                }
            ]
        }
    ]
}